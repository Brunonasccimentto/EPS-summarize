{
  "manifest_version": 3,
  "name": "Summarize for me",
  "version": "1.0",
  "description": "quick and easy text summaries",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "./src/js/background.js"
  },
  "action": {
    "default_popup": "./src/popup.html",
    "default_icon": {
      "16": "./src/icons/icon16.png",
      "48": "./src/icons/icon48.png",
      "128": "./src/icons/icon128.png"
    }
  }
}
